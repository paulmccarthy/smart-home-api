{
    "extends": "airbnb-base",
    "env": {
        "node": true,
        "mocha": true
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "strict": "off",
        "max-len": ["error", { "code": 120, "ignoreComments": true }],
        "prefer-destructuring": "off",
        "comma-dangle": ["error", { "functions": "ignore" }],
        "prefer-template": "off",
        "func-names": "off",
        "no-unused-expressions": ["error", { "allowTernary": true }]
    }
}
